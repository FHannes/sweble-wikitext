<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <!-- This POM -->

  <groupId>org.example</groupId>
  <artifactId>swc-example-dumpcruncher</artifactId>
  <version>2.0.0-alpha-3-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>SWC - Dump Cruncher Example</name>
  <url>http://osr.cs.fau.de</url>
  <inceptionYear>2012</inceptionYear>
  <description>
    An example project that goes through a WikiMedia Dump and processes each 
    page.
  </description>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <version.java>1.6</version.java>
    <build-examples.maven.cmd>mvn</build-examples.maven.cmd>
  </properties>

  <dependencies>

    <!-- Log4j -->
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
    </dependency>

    <!-- Sweble Wikitext Components - DumpReader -->
    <dependency>
      <groupId>org.sweble.wikitext</groupId>
      <artifactId>swc-dumpreader</artifactId>
      <version>2.0.0-alpha-3-SNAPSHOT</version>
    </dependency>

    <!-- Sweble Wikitext Components - Article Cruncher -->
    <dependency>
      <groupId>org.sweble.wikitext</groupId>
      <artifactId>swc-article-cruncher</artifactId>
      <version>2.0.0-alpha-3-SNAPSHOT</version>
    </dependency>

    <!-- Sweble Wikitext Components -->
    <dependency>
      <groupId>org.sweble.wikitext</groupId>
      <artifactId>swc-engine</artifactId>
      <version>2.0.0-alpha-3-SNAPSHOT</version>
    </dependency>

    <!-- JUnit -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <!-- Maven Eclipse Plugin -->
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>2.9</version>
        <configuration>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
        </configuration>
      </plugin>

      <!-- Create a JAR package -->
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <archive>
            <manifest>
              <mainClass>${package}.App</mainClass>
              <classpathPrefix>lib/</classpathPrefix>
              <addClasspath>true</addClasspath>
            </manifest>
          </archive>
        </configuration>
      </plugin>

      <!-- Copy libraries to target/lib (needed by .jar package) -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <!--
              Should really be:
              <outputDirectory>DOLLAR{project.build.directory}/lib</outputDirectory>
              But the Variable is replaced too early, messing up the packaged archetype.
                -->
              <outputDirectory>target/lib</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Check and format license headers -->
      <plugin>
        <groupId>com.mycila</groupId>
        <artifactId>license-maven-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <header>../etc/license-header.txt</header>
          <strictCheck>true</strictCheck>
          <failIfMissing>true</failIfMissing>
          <excludes>
            <exclude>**/.gitignore</exclude>
            <exclude>pom.xml</exclude>
            <exclude>LICENSE</exclude>
            <exclude>NOTICE</exclude>
            <exclude>README</exclude>
            <exclude>archetype-content.txt</exclude>
            <exclude>eclipse-project-files/**</exclude>
            <exclude>archetype-files/src/site/apt/index.apt.vm</exclude>
            <exclude>src/main/resources/render-template.html</exclude>
            <exclude>src/test/resources/**</exclude>
          </excludes>
        </configuration>
      </plugin>

      <!-- DO NOT DEPLOY THE EXAMPLE PROJECT ITSELF -->
      <plugin>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.1</version>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <!-- DO NOT GENERATE A SITE FOR THE EXAMPLE PROJECT ITSELF -->
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <skip>true</skip>
          <skipDeploy>true</skipDeploy>
        </configuration>
      </plugin>
    </plugins>

    <pluginManagement>
      <plugins>

        <!-- Java Maven Compiler Plugin -->
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>3.1</version>
          <configuration>
            <source>${version.java}</source>
            <target>${version.java}</target>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <repositories>
    <repository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>daily</updatePolicy>
        <checksumPolicy>warn</checksumPolicy>
      </snapshots>
      <id>osr-public-snapshots-repo</id>
      <name>OSR Public Snapshots Repository</name>
      <url>http://mojo.cs.fau.de/nexus/content/repositories/public</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
        <updatePolicy>daily</updatePolicy>
        <checksumPolicy>warn</checksumPolicy>
      </snapshots>
      <id>osr-public-plugin-snapshots-repo</id>
      <name>OSR Public Plugin Snapshots Repository</name>
      <url>http://mojo.cs.fau.de/nexus/content/repositories/public</url>
    </pluginRepository>
  </pluginRepositories>

  <!-- ==[ Profiles ]======================================================= -->

  <profiles>
    <profile>
      <id>build-examples</id>
      <build>
        <plugins>

          <!-- Call shell scripts to build examples -->
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.2.1</version>
            <executions>
              <execution>
                <id>exec-generate-example-archetype</id>
                <phase>install</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>../bin/generate-example-archetype.sh</executable>
                  <arguments>
                    <argument>.</argument>
                  </arguments>
                  <environmentVariables>
                    <MVN>${build-examples.maven.cmd}</MVN>
                  </environmentVariables>
                </configuration>
              </execution>
              <execution>
                <id>exec-generate-example-eclipse-project</id>
                <phase>install</phase>
                <goals>
                  <goal>exec</goal>
                </goals>
                <configuration>
                  <executable>../bin/generate-example-eclipse-project.sh</executable>
                  <arguments>
                    <argument>.</argument>
                  </arguments>
                  <environmentVariables>
                    <MVN>${build-examples.maven.cmd}</MVN>
                  </environmentVariables>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>
  </profiles>

</project>
