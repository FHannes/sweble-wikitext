/*!
 *
 * PageSwitch
 * ----------
 *
 *   Grammar:
 *     - '__' Name '__'
 *
 *   AST node:
 *     Name        : PageSwitch
 *     Extends     : LeafNode
 *     Constructor : name
 *     NodeType    : org.sweble.wikitext.lazy.AstNodeTypes.NT_PAGE_SWITCH
 *
 *     Properties:
 *       name : String
 *
 */

module org.sweble.wikitext.lazy.parser.PageSwitch;

import org.sweble.wikitext.lazy.utils.Warnings;




// -- PageSwitch ---------------------------------------------------------------

AstNode PageSwitch =
    "__" yyValue:PageSwitchChoice
  / "__"
    {
      yyValue = new Text("__");
    }
;

private inline AstNode PageSwitchChoice =
    name:SwitchName "__"
    {
      yyValue = new PageSwitch(name);

      if (isGatherRtData())
        addRtData(yyValue, joinRt("__", name, "__"));
    }
  / &{ isWarningsEnabled() } PageSwitchAutoCorrect
;

private inline AstNode PageSwitchAutoCorrect =
    &{ isAutoCorrect(WS_NORMAL) } name:SwitchName '_'
    {
      yyValue = new PageSwitch(name);

      if (isGatherRtData())
        addRtData(yyValue, joinRt("__", name, "__"));

      fileLooksLikeWarning(
          yyValue,
          makeSpan(yyStart - 2, yyIndex),
          WS_NORMAL,
          "Page Switch",
          "the finishing `_' is missing");
    }
  / &{ isWarningLevelEnabled(WS_NORMAL) } name:SwitchNameString "__"
    {
      yyValue = new Text("__" + name + "__");

      fileLooksLikeWarning(
          yyValue,
          makeSpan(yyStart - 2, yyIndex),
          WS_NORMAL,
          "Page Switch",
          "the specified page switch name is unknown");
    }
  / &{ isAutoCorrect(WS_INFO) } name:SwitchName
    {
      yyValue = new PageSwitch(name);

      if (isGatherRtData())
        addRtData(yyValue, joinRt("__", name));

      fileLooksLikeWarning(
          yyValue,
          makeSpan(yyStart - 2, yyResult),
          WS_INFO,
          "Page Switch",
          "the finishing `__' is missing");
    }
  / &{ isWarningLevelEnabled(WS_NONE) } &SwitchNameString
    {
      yyValue = new Text("__");

      fileLooksLikeWarning(
          yyValue,
          makeSpan(yyStart - 2, yyPredResult),
          WS_NONE,
          "Page Switch",
          "the name of the page switch is missing or not recognized as name");
    }
;

private inline String SwitchName =
  yyValue:SwitchNameString &{ isValidSwitchName(yyValue) }
;

private transient String SwitchNameString =
  ( '-'
  / [A-Z]
  / [a-z]
  / [0-9]
  / [\u00B7]
  / [\u00C0-\u00D6]
  / [\u00D8-\u00F6]
  / [\u00F8-\u02FF]
  / [\u0370-\u037D]
  / [\u037F-\u1FFF]
  / [\u200C-\u200D]
  / [\u2070-\u218F]
  / [\u2C00-\u2FEF]
  / [\u3001-\uD7FF]
  / [\uF900-\uFDCF]
  / [\uFDF0-\uFFFD]
  / [\u0300-\u036F]
  / [\u203F-\u2040]
  )+
;




