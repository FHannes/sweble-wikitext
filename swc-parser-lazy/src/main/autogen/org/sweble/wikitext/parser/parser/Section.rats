// -- SectionHeading ------------------------------------------------------------------

header
{
  import java.util.Stack;
}

body
{
  private WtForeignNode createHeading(
      int spanFrom,
      Result spanTo,
      WtNode rt0,
      int oCount,
      WtNodeList title,
      int cCount,
      WtNode rt1)
  {
    int oOdd = 0;
    int cOdd = 0;

    if (oCount > 6)
    {
      oOdd = oCount - 6;
      oCount = 6;
    }

    if (cCount > 6)
    {
      cOdd = cCount - 6;
      cCount = 6;
    }

    int level;
    if (cCount > oCount)
    {
      level = oCount;
      cOdd += cCount - oCount;
      cCount -= cCount - oCount;
    }
    else
    {
      level = cCount;
      oOdd += oCount - cCount;
      oCount -= oCount - cCount;
    }

    WtSectionHeading heading = new WtSectionHeading(title);

    WtText oOddText = null;
    if (oOdd > 0)
    {
      if (isWarningLevelEnabled(WS_NORMAL))
        fileOddSyntaxWarning(
            heading,
            makeSpan(spanFrom, spanTo),
            WS_NORMAL,
            "Odd number of opening equals");
      oOddText = new WtText(StringUtils.strrep('=', oOdd));
      heading.add(0, oOddText);
    }

    WtText cOddText = null;
    if (cOdd > 0)
    {
      if (isWarningLevelEnabled(WS_NORMAL))
        fileOddSyntaxWarning(
            heading,
            makeSpan(spanFrom, spanTo),
            WS_NORMAL,
            "Odd number of closing equals");
      cOddText = new WtText(StringUtils.strrep('=', cOdd));
      heading.add(cOddText);
    }

    String equals = StringUtils.strrep('=', level);
    setRtd(heading, rt0, equals, SEP, equals, rt1);

    return WtForeignNode.from(level, heading);
  }

