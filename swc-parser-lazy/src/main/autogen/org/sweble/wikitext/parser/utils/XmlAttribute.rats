/*!
 *
 * XML Attribute
 * -------------
 *
 *   Grammar:
 *     - Ws* XmlName Ws* '=' Ws* '\'' AttributeValueSq* '\''
 *     - Ws* XmlName Ws* '=' Ws* '"' ValueDqStar '"'
 *     - Ws* XmlName Ws* '=' ValueNqStar
 *     - Ws* XmlName
 *
 *   AST node:
 *     Name        : XmlAttribute
 *     Extends     : WtInnerNode1
 *     Constructor : "name, hasValue"
 *     Constructor : "name, value, hasValue"
 *     NodeType    : org.sweble.wikitext.parser.AstNodeTypes.NT_XML_ATTRIBUTE
 *
 *     Properties:
 *       name     : String
 *       hasValue : boolean
 *
 *     Children:
 *       value : WtList
 *
 * XML Attribute Garbage
 * ---------------------
 *
 *   AST node:
 *     Name        : XmlAttributeGarbage
 *     Extends     : StringContentNode
 *     Constructor : content
 *     NodeType    : org.sweble.wikitext.parser.AstNodeTypes.NT_XML_ATTRIBUTE_GARBAGE
 *
 */

module org.sweble.wikitext.parser.utils.XmlAttribute(WS);

import org.sweble.wikitext.parser.utils.XmlName;
import org.sweble.wikitext.parser.utils.XmlReference;
import WS;





// -- Attributes ---------------------------------------------------------------

WtList XmlAttributeStar =
  yyValue:tXmlAttributePlus?
  {
    if (yyValue == null)
      yyValue = new WtList();
  }
;

WtList XmlAttributePlus = tXmlAttributePlus ;

inline void XmlAttrGarbageStopper =
    <SlashGreater> "/>"
  / <Greater>      '>'
  / <Less>         '<'
;

inline void XmlAttrValueStopper =
    <SlashGreater> "/>"
  / <Greater>      '>'
  / <Less>         '<'
;

inline String XmlAttrWs =
    <Whitespace>   pWsPlus
;




// -- Attributes ---------------------------------------------------------------

private transient WtList tXmlAttributePlus =
  head:XmlHeadAttributeChoice tail:XmlTailAttributeChoice*
  {
    yyValue = new WtList(head, tail);
  }
;

private inline WikitextNode XmlHeadAttributeChoice =
    ValidXmlAttribute
  / XmlAttributeGarbage
;

private inline WikitextNode XmlTailAttributeChoice =
    &XmlAttrWs ValidXmlAttribute
  / XmlAttributeGarbage
;

private inline XmlAttributeGarbage XmlAttributeGarbage =
  garbage:GarbageString
  {
    yyValue = new XmlAttributeGarbage(garbage);
  }
;

private transient String GarbageString =
  ( !GarbageStringStopper _ )+
;

private inline void GarbageStringStopper =
    XmlAttrWs? XmlAttrGarbageStopper
  / XmlAttrWs ValidXmlAttribute
;

private XmlAttribute ValidXmlAttribute =
    ws0:XmlAttrWs? name:XmlName ws1:XmlAttrWs? '=' ws2:XmlAttrWs? ['] value:ValueSqStar ['] &AttrEnd
    {
      yyValue = setRtd(new XmlAttribute(name, value, true), ws0, name, ws1, '=', ws2, '\'', SEP, '\'');
    }
  / ws0:XmlAttrWs? name:XmlName ws1:XmlAttrWs? '=' ws2:XmlAttrWs? '"' value:ValueDqStar '"' &AttrEnd
    {
      yyValue = setRtd(new XmlAttribute(name, value, true), ws0, name, ws1, '=', ws2, '"', SEP, '"');
    }
  / ws0:XmlAttrWs? name:XmlName ws1:XmlAttrWs? '=' value:ValueNqStar &AttrEnd
    {
      yyValue = setRtd(new XmlAttribute(name, value, true), ws0, name, ws1, '=', SEP);
    }
  / ws0:XmlAttrWs? name:XmlName &AttrEnd
    {
      yyValue = setRtd(new XmlAttribute(name, false), ws0, name, SEP);
    }
;

private inline void AttrEnd =
    XmlAttrWs
  / XmlAttrValueStopper
  / Eof
;




// -- Single quoted attribute values -------------------------------------------

private transient WtList ValueSqStar =
  value:ValueSqChoice*
  {
    yyValue = new WtList(value);
  }
;

private inline WikitextNode ValueSqChoice =
    string:ValueSqString
    {
      yyValue = new WtText(string);
    }
  / &'&' XmlReference
;

private transient String ValueSqString =
  ( !XmlAttrValueStopper ![<'&] _ )+
;




// -- Double quoted attribute values -------------------------------------------

private transient WtList ValueDqStar =
  value:ValueDqChoice*
  {
    yyValue = new WtList(value);
  }
;

private inline WikitextNode ValueDqChoice =
    string:ValueDqString
    {
      yyValue = new WtText(string);
    }
  / &'&' XmlReference
;

private transient String ValueDqString =
  ( !XmlAttrValueStopper ![<"&] _ )+
;




// -- Non-quoted attribute values ----------------------------------------------

private transient WtList ValueNqStar =
  value:ValueNqChoice*
  {
    yyValue = new WtList(value);
  }
;

private inline WikitextNode ValueNqChoice =
    string:ValueNqString
    {
      yyValue = new WtText(string);
    }
  / &'&' XmlReference
;

private transient String ValueNqString =
  ( !XmlAttrValueStopper [a-zA-Z0-9!#$%()*,\-./:;<?@[\]^_`{|}~] )+
;




